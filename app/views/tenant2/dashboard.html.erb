<div class="container">
  <h1>Admin Dashboard</h1>

  <%= form_with url: tenant2_reset_password_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" name="email" id="email" value="<%= @user_data %>" class="form-control" />
    </div>

    <div class="form-group">
      <label for="data">Password in Base64</label>
      <textarea name="data" id="data" rows="4" cols="50" class="form-control"><%= @encoded_data %></textarea>
    </div>

    <div class="form-group">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <p class="flash-alert"><%= flash[:alert] %></p>
  <% end %>
</div>
